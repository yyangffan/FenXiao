                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/HomePage_name28"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/HomePage_name29"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sum_120"
                    android:layout_marginTop="@dimen/sum_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/sum_10"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/dialog_tvcolor_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/HomePage_name61"
                        android:textColor="@color/black"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/merchandise_tu_id"
                    android:layout_width="@dimen/sum_100"
                    android:layout_height="@dimen/sum_100"
                    android:layout_marginLeft="@dimen/sum_10"
                    android:scaleType="fitXY"
                    android:src="@drawable/position_img"/>
            </LinearLayout>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/colorwhites">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorwhites"
                android:orientation="vertical"
                android:paddingLeft="@dimen/sum_10"
                android:paddingTop="@dimen/sum_20">

                <LinearLayout
                    android:id="@+id/home_type_llayout_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.linkhand.fenxiao.utils.MyListView
                        android:id="@+id/home_type_listview_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sum_1"
                    android:background="@color/colorgraynessb"/>

                <RelativeLayout
                    android:id="@+id/number_rlayout_id"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sum_60">

                    <TextView
                        android:id="@+id/detail_tv_id3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/HomePage_name32"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sum_16"
                        />

                    <TextView
                        android:id="@+id/detail_bottom_xiangou"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/detail_tv_id3"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"/>

                    <LinearLayout
                        android:id="@+id/detail_additionll_id"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/sum_10"
                        android:gravity="center_vertical">

                        <Button
                            android:id="@+id/detail_addition_id"
                            android:layout_width="@dimen/sum_50"
                            android:layout_height="wrap_content"
                            android:background="@color/gray_f5"
                            android:text="＋"
                            android:textColor="@color/transparence50"
                            android:textSize="16sp"/>
                    </LinearLayout>
                    <!--<ImageView-->
                    <!--android:id="@+id/detail_addition_id"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_marginRight="@dimen/sum_10"-->
                    <!--android:gravity="center_vertical"-->
                    <!--android:src="@drawable/a"/>-->

                    <TextView
                        android:id="@+id/detail_number_id"
                        android:layout_width="@dimen/sum_40"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/detail_additionll_id"
                        android:gravity="center"
                        android:text="@string/HomePage_name34"
                        android:textColor="@color/black"/>

                    <!--<ImageView-->
                    <!--android:id="@+id/detail_subtraction_id"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_toLeftOf="@+id/detail_number_id"-->
                    <!--android:gravity="center_vertical"-->
                    <!--android:src="@drawable/a"/>-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@+id/detail_number_id"
                        android:gravity="center_vertical">

                        <Button
                            android:id="@+id/detail_subtraction_id"
                            android:layout_width="@dimen/sum_50"
                            android:layout_height="wrap_content"
                            android:background="@color/gray_f5"
                            android:text="—"
                            android:textColor="@color/transparence50"/>
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sum_1"
                    android:background="@color/colorgraynessb"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>
