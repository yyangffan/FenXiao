        <!--android:text="@string/HomePage_name23"-->
        <!--android:textColor="@color/colorwhites"/>-->

        <TextView
            android:id="@+id/detail_purchasing_id2"
            android:layout_width="0dp"
            android:layout_height="@dimen/sum_53"
            android:layout_weight="2"
            android:background="@color/colorred"
            android:gravity="center"
            android:text="@string/HomePage_name24"
            android:textColor="@color/colorwhites"/>
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/detail_llayout_id2"
        android:orientation="vertical">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sum_90"
                android:layout_marginTop="@dimen/sum_10"
                android:background="@color/colorwhites"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sum_120"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/sum_10"
                    android:paddingTop="@dimen/sum_10">


                    <TextView
                        android:id="@+id/single_rmb"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/colorred"/>

                    <LinearLayout
                        android:id="@+id/return_id1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/sum_10">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/close"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sum_120"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/sum_10"
