<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_item_rlayout_id"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorwhites"
    android:paddingBottom="5dp"
    >

    <TextView
        android:id="@+id/home_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingRight="3dp"
        android:layout_marginLeft="@dimen/sum_5"
        android:layout_below="@+id/home_item_tuid"
        android:ellipsize="end"
        android:maxLines="2"
        android:minLines="2"
        android:text="xxxx"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/home_item_viprmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/home_item_tuid"
        android:layout_marginLeft="@dimen/sum_10"
        android:layout_toRightOf="@+id/home_item_tuid"
        android:text="¥xxx"
        android:textColor="@color/colorred"
        android:textSize="@dimen/sum_16"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/home_item_zirmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_item_murmb"
        android:layout_marginLeft="@dimen/sum_5"
        android:text="¥xxx"
        android:textColor="@color/colorred"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/home_item_zitext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/home_item_zirmb"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@+id/home_item_zirmb"
        android:text="@string/home_item_name2"
        android:textColor="@color/gray_text"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/home_item_murmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/home_item_title"
        android:layout_marginLeft="@dimen/sum_5"
        android:text="¥xxx"
        android:textColor="@color/colorred"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/home_item_mutext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/home_item_zirmb"
        android:layout_alignBottom="@+id/home_item_murmb"
        android:layout_marginBottom="2dp"
        android:layout_toRightOf="@+id/home_item_murmb"
        android:text="@string/home_item_name3"
        android:textColor="@color/gray_text"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/home_item_goumai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/home_item_zirmb"
        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/sum_5"
        android:textSize="12sp"
        android:text="@string/home_item_name1"
        android:textColor="@color/gray_text"/>

    <TextView
        android:id="@+id/home_item_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/home_item_zirmb"
        android:layout_toLeftOf="@+id/home_item_goumai"
        android:text="xxx"
        android:textSize="12sp"
        android:textColor="@color/colorred"/>

    <ImageView
        android:id="@+id/home_item_tuid"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sum_180"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/position_img"/>
</RelativeLayout>
