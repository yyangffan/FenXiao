    android:paddingTop="@dimen/sum_5">


    <TextView
        android:id="@+id/parameter_name_id"
        android:layout_width="wrap_content"
        android:minWidth="@dimen/sum_60"
        android:layout_height="wrap_content"
        android:text="xxxx"
        android:textColor="@color/gray_text"/>

    <TextView
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:background="@color/gray_text"
        android:layout_marginLeft="@dimen/sum_10"
        android:layout_marginRight="@dimen/sum_10"
     />

    <TextView
        android:id="@+id/parameter_content_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="xx"/>

</LinearLayout>
