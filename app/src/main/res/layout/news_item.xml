<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/all_llayout_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwhites"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/sum_10"
        android:paddingRight="@dimen/sum_10"
        android:paddingTop="@dimen/sum_5">

        <TextView
            android:id="@+id/item_red"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/circle_red"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/sum_3"
            android:paddingBottom="@dimen/sum_3"
            android:paddingLeft="2dp"
            android:text="@string/currency_name10"
            android:textColor="@color/colorblack"
           />
    </RelativeLayout>

    <TextView
        android:id="@+id/news_content_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="@dimen/sum_10"
        android:paddingRight="@dimen/sum_10"
        android:text="ssssssssss"/>

    <TextView
        android:id="@+id/news_time_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sum_3"
        android:layout_marginBottom="@dimen/sum_3"
        android:paddingLeft="@dimen/sum_10"
        android:paddingRight="@dimen/sum_10"
        android:textSize="12sp"
        android:text="1999-12-12 10.11.11"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/sum_3"
        android:background="@color/colorgraynessb"/>
</LinearLayout>

