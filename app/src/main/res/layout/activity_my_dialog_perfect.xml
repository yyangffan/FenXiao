<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_dialog_vip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwhites"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.linkhand.fenxiao.dialog.MyDialogPerfect">

    <EditText
        android:background="@null"
        android:id="@+id/dialog_input"
        android:maxLines="1"
        android:maxLength="10"
        android:layout_marginTop="@dimen/sum_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/sum_10"
        android:paddingTop="@dimen/sum_10"
        android:hint="@string/mialog_name14"
        android:textColorHint="@color/colorgraynessd"
        android:textColor="@color/black"/>
    <EditText
        android:visibility="gone"
        android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"
        android:background="@null"
        android:id="@+id/dialog_input_identity"
        android:maxLines="1"
        android:maxLength="10"
        android:layout_marginTop="@dimen/sum_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/sum_10"
        android:paddingTop="@dimen/sum_10"
        android:hint="请输入您的身份证号"
        android:textColorHint="@color/colorgraynessd"
        android:textColor="@color/black"/>

    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorgraynessb"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialogvip_login_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/sum_10"
            android:paddingTop="@dimen/sum_10"
            android:text="@string/HomePage_name35"
            android:textColor="@color/colorblack"/>

        <TextView
            android:id="@+id/dialogvip_login_id2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/sum_10"
            android:paddingTop="@dimen/sum_10"
            android:text="@string/mialog_name4"
            android:textColor="@color/colorred"/>
    </LinearLayout>

</LinearLayout>
