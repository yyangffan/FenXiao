<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/sum_5"
    >

    <ImageView
        android:id="@+id/currency_iv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/sum_img"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sum_10"
        android:layout_toRightOf="@+id/currency_iv_id"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/currency_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.9"
                android:textColor="@color/colorred"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/currency_zi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="子币"
                android:textColor="@color/colorred"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/currency_sell_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/母币单价"
                android:textColor="@color/text_gray"
                android:textSize="14sp"/>
        </LinearLayout>


        <TextView
            android:id="@+id/currency_ismy_id"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:paddingBottom="@dimen/sum_3"
            android:text="官方出售"
            android:textColor="@color/gray_text"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/surplus_rmb_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/sum_5"
            android:text="剩余xx母币"
            android:textColor="@color/gray_text"
            android:textSize="12sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/currency_tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_bg_rounded_two"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/sum_5"
        android:paddingLeft="@dimen/sum_10"
        android:paddingRight="@dimen/sum_10"
        android:paddingTop="@dimen/sum_5"
        android:text="@string/home_item_name4"
        android:textColor="@color/colorwhites"/>

</RelativeLayout>
