<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_liuyan_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/sum_5"
        android:text="留言"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/dialog_liuyan_imgv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dialog_liuyan_title"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/dialog_liuyan_title"
        android:layout_marginRight="@dimen/sum_5"
        android:padding="@dimen/sum_5"
        android:src="@drawable/close"/>

    <EditText
        android:id="@+id/dialog_liuyan_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_liuyan_title"
        android:layout_marginLeft="@dimen/sum_10"
        android:layout_marginRight="@dimen/sum_10"
        android:background="@drawable/edt_bg"
        android:gravity="left|top"
        android:hint="请输入留言..."
        android:minHeight="150dp"
        android:padding="5dp"
        android:textColorHint="@color/colorgraynessd"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_liuyan_edt"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_liuyan_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/sum_8"
            android:paddingTop="@dimen/sum_8"
            android:text="取消"/>

        <TextView
            android:id="@+id/dialog_liuyan_commit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/sum_8"
            android:paddingTop="@dimen/sum_8"
            android:text="确定"
            android:textColor="@color/colorred"/>

    </LinearLayout>

</RelativeLayout>