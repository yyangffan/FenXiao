<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shopping_item_rlayout_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorgraynessb"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/shopping_ll_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorwhites"
        android:paddingBottom="@dimen/sum_10"
        android:paddingRight="@dimen/sum_10"
        android:paddingTop="@dimen/sum_10">

        <ImageView
            android:id="@+id/shopping_selected_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/sum_10"
            android:paddingRight="@dimen/sum_10"
            android:src="@drawable/ovaltwo"/>

        <TextView
            android:id="@+id/shopping_new_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/sum_10"
            android:layout_marginRight="@dimen/sum_10"
            android:background="@drawable/circle_top_gray"
            android:gravity="center"
            android:padding="5dp"
            android:text="失\n效"
            android:textColor="@color/white"
            android:visibility="gone"/>
        <!--<RadioButton-->
        <!--android:layout_marginRight="@dimen/sum_10"-->
        <!--android:id="@+id/shopping_selected_id"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="match_parent"/>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/shopping_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sum_5"
                android:layout_marginRight="@dimen/sum_40"
                android:layout_toRightOf="@+id/shopping_item_tuid"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="品商品商品商品商品商品商品商品"
                android:textColor="@color/colorblack"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/shopping_item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shopping_item_title"
                android:layout_marginLeft="@dimen/sum_5"
                android:layout_marginRight="@dimen/sum_50"
                android:layout_toRightOf="@+id/shopping_item_tuid"
                android:gravity="center_vertical"
                android:padding="3dp"
                android:text=""
                android:textColor="@color/gray_translucent"
                android:textSize="12sp"
                />


            <TextView
                android:id="@+id/shopping_item_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/shopping_item_delete"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/shopping_item_title"
                android:layout_marginRight="@dimen/sum_5"
                android:layout_marginLeft="@dimen/sum_5"
              />

            <TextView
                android:id="@+id/shopping_item_zirmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shopping_item_murmb"
                android:layout_marginLeft="@dimen/sum_5"
                android:layout_toRightOf="@+id/shopping_item_tuid"
                android:text="￥xxx"
                android:textColor="@color/colorred"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/shopping_item_zitext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shopping_item_murmb"
                android:layout_toRightOf="@+id/shopping_item_zirmb"
                android:text="@string/home_item_name2"
                android:textColor="@color/gray_translucent"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/shopping_item_murmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shopping_item_type"
                android:layout_marginLeft="@dimen/sum_5"
                android:layout_toRightOf="@+id/shopping_item_tuid"
                android:text="￥xxx"
                android:textColor="@color/colorred"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/shopping_item_mutext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/shopping_item_murmb"
                android:layout_toRightOf="@+id/shopping_item_murmb"
                android:text="@string/home_item_name3"
                android:textColor="@color/text_gray"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/shopping_item_delete"
                android:layout_width="12dp"
                android:layout_height="15dp"
                android:layout_alignBottom="@+id/shopping_item_zitext"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/sum_5"
                android:layout_marginLeft="@dimen/sum_10"
                android:layout_marginTop="@dimen/sum_5"
                android:layout_marginRight="@dimen/sum_5"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/delete_img"/>

            <ImageView
                android:id="@+id/failure_image_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/sum_40"
                android:src="@drawable/invalid"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/shopping_item_tuid"
                android:layout_width="@dimen/sum_80"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:minHeight="@dimen/sum_80"
                android:src="@drawable/goods_img"/>

        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/shopping_ll_shixiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/sum_1"
        android:background="@color/colorwhites"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/sum_5"
        android:paddingLeft="@dimen/sum_10"
        android:paddingRight="@dimen/sum_10"
        android:paddingTop="@dimen/sum_5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/subtract_item_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/detail_addition_id"
                android:layout_width="@dimen/sum_40"
                android:layout_height="@dimen/sum_40"
                android:text="—"
                android:textColor="@color/transparence50"/>
        </LinearLayout>

        <TextView
            android:id="@+id/detail_number_id"
            android:layout_width="@dimen/sum_40"
            android:layout_height="@dimen/sum_30"
            android:layout_toLeftOf="@+id/detail_addition_id"
            android:background="@color/colorgraynessb"
            android:gravity="center"
            android:text="@string/HomePage_name34"
            android:textColor="@color/black"/>

        <LinearLayout
            android:id="@+id/detail_additionll_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/detail_number_id"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/detail_subtraction_id"
                android:layout_width="@dimen/sum_40"
                android:layout_height="@dimen/sum_40"
                android:text="＋"
                android:textColor="@color/transparence50"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
