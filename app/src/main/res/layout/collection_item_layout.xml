<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/collection_item_rlayout_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorwhites"
                android:padding="@dimen/sum_10"
    >

    <TextView
        android:id="@+id/collection_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sum_5"
        android:layout_toRightOf="@+id/collection_item_tuid"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="title"
        android:textColor="@color/transparence50"
        android:textSize="14sp"/>


    <TextView
        android:id="@+id/collection_item_zirmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/collection_item_tuid"
        android:layout_marginLeft="@dimen/sum_5"
        android:layout_toRightOf="@+id/collection_item_tuid"
        android:text="￥100"
        android:textColor="@color/colorred"
       />

    <TextView
        android:id="@+id/collection_item_zitext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/collection_item_tuid"
        android:layout_toRightOf="@+id/collection_item_zirmb"
        android:text="@string/home_item_name2"
        android:textColor="@color/gray_text"
      />

    <TextView
        android:id="@+id/collection_item_murmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/collection_item_zirmb"
        android:layout_marginLeft="@dimen/sum_5"
        android:layout_toRightOf="@+id/collection_item_tuid"
        android:text="￥100"
        android:textColor="@color/colorred"
       />

    <TextView
        android:id="@+id/collection_item_mutext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/collection_item_zirmb"
        android:layout_toRightOf="@+id/collection_item_murmb"
        android:text="@string/home_item_name3"
        android:textColor="@color/gray_text"
   />

    <TextView
        android:id="@+id/collection_item_goumai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/collection_item_tuid"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_yuanjiao_oneone"
        android:gravity="center"
        android:paddingBottom="@dimen/sum_5"
        android:paddingLeft="@dimen/sum_10"
        android:paddingRight="@dimen/sum_10"
        android:paddingTop="@dimen/sum_5"
        android:text="@string/mine_name39"
        android:textColor="@color/gray_text"/>


    <ImageView
        android:id="@+id/collection_item_tuid"
        android:layout_width="@dimen/sum_80"
        android:layout_height="@dimen/sum_80"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/goods_img"/>
</RelativeLayout>
