<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/adialog_pay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwhites"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.linkhand.fenxiao.dialog.MyDialogPay">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/sum_10"
        android:paddingTop="@dimen/sum_10"
        android:src="@drawable/money"/>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/sum_10"
        android:paddingTop="@dimen/sum_10">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="@string/mialog_name23"/>

        <TextView
            android:textColor="@color/colorred"
            android:id="@+id/dialog_pay_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0.0"/>

        <TextView
            android:id="@+id/zi_text_id"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="@string/mialog_name24"/>
    </LinearLayout>

    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorgraynessb"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_cancel_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/sum_10"
            android:paddingTop="@dimen/sum_10"
            android:text="@string/HomePage_name35"
            android:textColor="@color/colorblack"/>

        <TextView
            android:id="@+id/dialog_confirm_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="@dimen/sum_10"
            android:paddingTop="@dimen/sum_10"
            android:text="@string/mialog_name4"
            android:textColor="@color/colorred"/>
    </LinearLayout>

</LinearLayout>
